<h1>Articles#index</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td> <%= link_to 'Show', article_path(article) %>
            <%= link_to 'Edit', edit_article_path(article) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2><%= link_to 'Back', root_path %></h2>
<h2><%= link_to 'New', new_article_path %></h2>
